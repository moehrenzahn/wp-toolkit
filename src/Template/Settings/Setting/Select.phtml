<?php /** @var \Moehrenzahn\Toolkit\View\Settings\Setting $view */ ?>
<?php
/** @var \Moehrenzahn\Toolkit\AdminPage\Settings\Setting\Select $setting */
$setting = $view->getSetting();
?>
<select name="<?php echo $setting->getId(); ?>"
        id="<?php echo $setting->getId(); ?>">
    <?php foreach ($setting->getOptions() as $optionSlug => $optionName) : ?>
        <option value="<?php echo $optionSlug; ?>"
            <?php echo ($optionSlug === $setting->getValue()) ? 'selected' : ''; ?>>
            <?php echo $optionName; ?>
        </option>
    <?php endforeach; ?>
</select>
<p class="description"><?php echo $setting->getDescription(); ?></p>